{
    "id": "homeassistant",
    "version": "1.0.2",
    "name": "Home Assistant",
    "documentationURL": "https://github.com/ludeeus/features/tree/main/src/homeassistant",
    "description": "Installs Home Assistant Core inside the devcontainer.",
    "options": {
        "version": {
            "type": "string",
            "proposals": [
                "stable",
                "beta"
            ],
            "default": "stable",
            "description": "Select or enter an Home Assistant version."
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/python"
    ]
}
